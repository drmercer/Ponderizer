<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.danmercer.ponderizer" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Look up scriptures by reference -->
        <activity
            android:name=".AddScriptureReferenceActivity"
            android:parentActivityName=".MainActivity" />

        <!-- "Share" text from other apps (i.e. Gospel Library) and add as scripture -->
        <activity
            android:name=".AddScriptureTextActivity"
            android:label="Add Scripture to Ponderize"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity android:name=".AddScriptureInstructions" >
        </activity>
        <activity android:name=".ScriptureViewActivity" >
        </activity>
    </application>

</manifest>
